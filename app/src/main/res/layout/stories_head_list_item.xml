<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="@dimen/_80sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/story_header_size"
        android:layout_height="@dimen/story_header_size"
        app:cardCornerRadius="@dimen/_30sdp"
        android:layout_margin="@dimen/_3sdp">

        <ImageView
            android:id="@+id/ivStoriesListItem"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/grey"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_8ssp"
        android:ellipsize="end"
        android:maxWidth="@dimen/_72sdp"
        android:maxHeight="@dimen/_15sdp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginTop="@dimen/_minus2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_gravity="center"
        tools:text="somethings_is_hap" />


</LinearLayout>